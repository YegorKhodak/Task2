@model Task2.Models.ViewModels.ListOfOrderForUserViewModel
@{
    ViewData["Title"] = "Index";
}
@*<input type="hidden" class="jCurrentUserId" value="@Model.CurrentUserId"/>*@
    <button class="btn btn-success">@Html.ActionLink("Go to Categories", "Index", "Categories", new { userId = Model.CurrentUserId}, new { Style = "color:black" })</button>
<h1>Orders</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product name</th>
            <th>Status</th>
            <th>Date created</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model.Orders)
        {
        <tr>
            <td>@order.Id</td>
            <td>@order.Product.Name</td>
            <td>@order.OrderStatus.ToString()</td>
            <td>@order.DateCreated</td>
        </tr>
        }
    </tbody>
</table>

<button class="btn btn-success" style="background-color:#808080;">@Html.ActionLink("Go to cart", "Index", "Cart", new { userId = Model.CurrentUserId }, new { Style = "color:black" })</button>


